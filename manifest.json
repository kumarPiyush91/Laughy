{
  "manifest_version": 3,
  "name": "Laughy",
  "version": "1.0",
  "description": "Click to get a random joke and brighten your day instantly!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/logo32.png",
      "48": "icons/logo48.png"
    }
  },
  "icons": {
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "host_permissions": [
    "https://icanhazdadjoke.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "p041991@gmail.com",
      "strict_min_version": "109.0" 
    }
  }
}